{
    "name": "digital-sector/codestyle",
    "description": "Codestyle for projects",
    "license": ["proprietary"],
    "type": "composer-plugin",
    "require": {
        "php": "^7.4 || ^8.0",
        "symfony/console": "^5.4 || ^6.0 || ^7.0",
        "composer-plugin-api": "*",
        "brainmaestro/composer-git-hooks": "^2.8",
        "phpstan/phpstan": "^1.10",
        "friendsofphp/php-cs-fixer": "^3.40",
        "symfony/filesystem": "^5.4 || ^6.0 || ^7.0"
    },
    "require-dev": {
        "composer/composer": "^2.6"
    },
    "scripts": {
        "code-style:phplint": "php -l -f",
        "code-style:fix": "vendor/bin/php-cs-fixer fix --path-mode=intersection --config .php_cs-fixer.php --allow-risky=yes",
        "code-style:check": "vendor/bin/php-cs-fixer fix --path-mode=intersection --config .php_cs-fixer.php --allow-risky=yes",
        "code-style:analyze": "vendor/bin/phpstan analyse -c phpstan.neon --ansi"
    },
    "autoload": {
        "psr-4": {
            "DigitalSector\\CodeStyle\\": "src"
        }
    },
    "extra": {
        "class": "DigitalSector\\CodeStyle\\Plugin"
    }
}
